                <TextBox TextWrapping="Wrap"/>
            </Border>
            <Label Content="Primer Apellido" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top"/>
            <Border BorderBrush="#FFABADB3" BorderThickness="1" HorizontalAlignment="Left" Height="23" Margin="10,180,0,0" VerticalAlignment="Top" Width="120">
