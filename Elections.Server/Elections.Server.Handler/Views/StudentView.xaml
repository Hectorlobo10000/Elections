            </Border>
            <Label Content="Segundo Apellido" HorizontalAlignment="Left" Margin="139,145,0,0" VerticalAlignment="Top"/>
            <Border BorderBrush="#FFABADB3" BorderThickness="1" HorizontalAlignment="Left" Height="23" Margin="137,180,0,0" VerticalAlignment="Top" Width="120">
                <TextBox TextWrapping="Wrap"/>
            </Border>
            <Label Content="Sexo" HorizontalAlignment="Left" Margin="10,224,0,0" VerticalAlignment="Top"/>
            <ComboBox HorizontalAlignment="Left" Margin="10,255,0,0" VerticalAlignment="Top" Width="247"/>
            <Label Content="Grado" HorizontalAlignment="Left" Margin="10,296,0,0" VerticalAlignment="Top"/>
            <ComboBox HorizontalAlignment="Left" Margin="10,327,0,0" VerticalAlignment="Top" Width="247"/>
            <Label Content="Sección" HorizontalAlignment="Left" Margin="14,371,0,0" VerticalAlignment="Top"/>
            <ComboBox HorizontalAlignment="Left" Margin="10,402,0,0" VerticalAlignment="Top" Width="247"/>
            <Button x:Name="Acept" Content="Aceptar" HorizontalAlignment="Left" Margin="86,454,0,0" VerticalAlignment="Top" Width="75"/>
