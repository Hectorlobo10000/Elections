            <Border BorderBrush="#FFABADB3" BorderThickness="1" HorizontalAlignment="Left" Height="23" Margin="137,36,0,0" VerticalAlignment="Top" Width="120">
                <TextBox TextWrapping="Wrap"/>
            </Border>
            <Label Content="Primer Nombre" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
